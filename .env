APP_HOST=127.0.0.1
APP_PORT=8080
ADMIN_TOKEN=

JOYSTICK_API_BASE=https://support.joystick.tv/developer_support/  # reference only
JOYSTICK_TOKEN=...

# Perplexity
PPLX_API_KEY=...
PPLX_PERSONA_NAME=Pixel

# TTS Bridge (external service listening on local machine)
TTS_BRIDGE_BASE=http://127.0.0.1:17890
TTS_PRE_SOUND=announcement.wav                 # played via overlay, not by TTS bridge
TTS_QUEUE_MAX=5
TTS_COOLDOWN_SECONDS=10

# Sounds
SOUNDS_DIR=./sounds

# OBS overlay endpoints (local)
OVERLAY_WS_PATH=/overlay/ws
OVERLAY_SFX_PATH=/overlay/sfx
OVERLAY_WHEEL_PATH=/overlay/wheel

# VRChat OSC
OSC_HOST=127.0.0.1
OSC_PORT=9000
OSC_ADDRESS_BASE=/avatar/parameters  # or world routes; configurable

# Remote OBS (clips)
REMOTE_OBS_HOST=192.168.1.50
REMOTE_OBS_PORT=4455
REMOTE_OBS_PASSWORD=...
REMOTE_OBS_REPLAY_BUFFER_MS=15000

# Points/Xp defaults
POINTS_CHAT_GAIN=1
POINTS_FOLLOW_GAIN=50
POINTS_SUB_GAIN=200
POINTS_TIP_LOW=25
POINTS_TIP_MEDIUM=150
POINTS_TIP_HIGH=500
POINTS_TIP_EXTREME=1500

# Redeem costs
COST_TTS=25
COST_PIXEL=50
COST_SOUND=15
COST_SPIN=100

# Cooldowns (per-user)
CD_TTS=15
CD_PIXEL=20
CD_SOUND=5
CD_SPIN=60
